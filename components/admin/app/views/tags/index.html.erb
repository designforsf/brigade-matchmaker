<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.category_id %></td>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', category_tag_path(@category, tag) %></td>
        <td><%= link_to 'Edit', edit_category_tag_path(@category, tag) %></td>
        <td><%= link_to 'Destroy', category_tag_path(@category, tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_category_tag_path(@category) %>
